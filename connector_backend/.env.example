# Example environment variables for connector_backend

# REQUIRED
SECRET_KEY=replace_with_secure_random_string
ENCRYPTION_KEY=replace_with_secure_encryption_key
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=workflow_connector

# OPTIONAL
DEBUG=true
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
WORKERS=1

# CORS and Hosts
# Comma-separated list for allowed origins/hosts, e.g. http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=*
ALLOWED_HOSTS=

# Redis (if used)
REDIS_URL=redis://localhost:6379

# OAuth settings (optional)
JIRA_CLIENT_ID=
JIRA_CLIENT_SECRET=
JIRA_REDIRECT_URI=

CONFLUENCE_CLIENT_ID=
CONFLUENCE_CLIENT_SECRET=
CONFLUENCE_REDIRECT_URI=

SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=

GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_REDIRECT_URI=

SERVICENOW_CLIENT_ID=
SERVICENOW_CLIENT_SECRET=
SERVICENOW_REDIRECT_URI=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Celery (optional)
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
