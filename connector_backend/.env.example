# Application Configuration
APP_NAME=Unified Workflow Connector
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Security
SECRET_KEY=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=workflow_connector

# Redis Configuration (for caching and job queue)
REDIS_URL=redis://localhost:6379

# CORS and Security
ALLOWED_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
ALLOWED_HOSTS=["localhost", "yourdomain.com"]

# OAuth Configuration - JIRA/Atlassian
JIRA_CLIENT_ID=your-jira-client-id
JIRA_CLIENT_SECRET=your-jira-client-secret
JIRA_REDIRECT_URI=https://yourdomain.com/api/v1/connectors/jira/oauth/callback

# OAuth Configuration - Confluence
CONFLUENCE_CLIENT_ID=your-confluence-client-id
CONFLUENCE_CLIENT_SECRET=your-confluence-client-secret
CONFLUENCE_REDIRECT_URI=https://yourdomain.com/api/v1/connectors/confluence/oauth/callback

# OAuth Configuration - Slack
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_REDIRECT_URI=https://yourdomain.com/api/v1/connectors/slack/oauth/callback

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://yourdomain.com/api/v1/connectors/github/oauth/callback

# OAuth Configuration - GitLab
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret
GITLAB_REDIRECT_URI=https://yourdomain.com/api/v1/connectors/gitlab/oauth/callback

# OAuth Configuration - ServiceNow
SERVICENOW_CLIENT_ID=your-servicenow-client-id
SERVICENOW_CLIENT_SECRET=your-servicenow-client-secret
SERVICENOW_REDIRECT_URI=https://yourdomain.com/api/v1/connectors/servicenow/oauth/callback

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-signature-validation

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Background Jobs (Optional - for Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30
